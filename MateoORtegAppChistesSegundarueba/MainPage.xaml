<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MateoORtegAppChistesSegundarueba.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25"
            VerticalOptions="Center"
            HorizontalOptions="Center">

                    <Label
            Text="Mateo oRtega APP Chistes"
            FontSize="32"
            HorizontalOptions="Center" />

                    <Image
            Source="emojies.jpg"
            HeightRequest="185"
            Aspect="AspectFit"
            HorizontalOptions="Center" />

                    <Button
            Text="Ir a AboutGrid" BackgroundColor="Teal"
            Clicked="OnAboutGridClicked"
            HorizontalOptions="Center" />

                    <Button
            Text="Ir a AbsoluteLayout" BackgroundColor="Teal"
            Clicked="OnAbsoluteLayoutClicked"
            HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
